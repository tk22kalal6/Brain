      "choices": [
        {
          "id": 37351,
          "text": "<p><span style=\"font-size:12pt;\">Gene conversion</span></p>"
        },
        {
          "id": 37352,
          "text": "<p><span style=\"font-size:12pt;\">Sister chromatid exchange</span></p>"
        },
        {
          "id": 37353,
