      "choices": [
        {
          "id": 18795,
          "text": "<p><span style=\"font-size:12.0pt;\">Causative factors</span></p>"
        },
        {
          "id": 18796,
          "text": "<p><span style=\"font-size:12.0pt;\">Behavioral and cultural factors</span></p>"
        },
        {
          "id": 18797,
          "text": "<p><span style=\"font-size:12.0pt;\">Population characteristics</span></p>"
        },
        {
          "id": 18798,
