        {
          "id": 2,
          "text": "Oxymetazoline therapy"
        },
        {
          "id": 3,
          "text": "Azithromycin therapy"
        },
        {
          "id": 4,
          "text": "Chest radiograph"
        },
        {
          "id": 5,
          "text": "Amoxicillin therapy"
